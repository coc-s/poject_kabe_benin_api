{% extends 'base.html.twig' %}

{% block title %}Hello GeoGouvController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<h1>Liste Regions :
		</h1>
		<div class="row">
			{% for region in regions %}

				<div class="col-md-3">
					<div class="card border-primary mb-3" style="max-width: 20rem;">
						<div class="card-header">{{ region.code }}</div>
						<div class="card-body">
							<h4 class="card-title">{{ region.nom }}</h4>
						
						</div>
					</div>
				</div>

			{% endfor %}
		</div>

	</div>

{% endblock %}
