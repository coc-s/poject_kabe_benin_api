{% extends 'base.html.twig' %}

{% block title %}Hello Controller!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">

		<br>
		<br>
		<br>
		<h1>Ajout parrainage :

		<br>
		<br>
		</h1>
		<div class="row">

			<div class="col-md-12">
				<form action="" method="POST" class="row g-3">
					<div class="col-md-6">
						<label for="inputNom" class="form-label">Nom de L'enfant</label>
						<input type="text" required name="nom" class="form-control" id="inputNom">
					</div>
					<div class="col-md-6">
						<label for="inputPrenom" class="form-label">Prenom de l'enfant</label>
						<input type="text" required name="prenom" class="form-control" id="inputPrenom">
					</div>
					<div class="col-md-6">
						<label for="inputDate" class="form-label">Date de naissance de l'enfant</label>
						<input type="date" required name="date" class="form-control" id="inputDate">
					</div>
					<div class="col-md-6">
						<label for="inputSexe" class="form-label">Sexe de l'enfant</label>
						<input type="text" required name="sexe" class="form-control" id="inputSexe">
					</div>
					<div class="col-md-6">
						<label for="inputDate" class="form-label">Date de parrainage</label>
						<input type="date" name="date" required class="form-control" id="inputDate">
					</div>
					<div class="col-md-6">
						
					</div>
					<div class="col-12">
						<label for="inputAddress" class="form-label">Ecole de l'enfant</label>
						<input type="text" required name="adresse" class="form-control" id="inputAddress" placeholder="">
					</div>
					<div class="col-md-6">
						<label for="inputCodePostal" class="form-label">Village</label>
						<input type="text" required name="codePostal" class="form-control" id="inputCodePostal">
					</div>

					<div class="col-md-4"></div>
					<div class="col-12">
						<button type="submit" class="btn btn-primary">Ajout</button>
					</div>
				</form>
			</div>


		</div>

	</div>

{% endblock %}
